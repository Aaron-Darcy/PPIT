<body>
    <style>
         table{
            background-color: white;
        }
        tb,
        td {
            border: 1px solid black;
        }
        body{
            background-color:maroon ;
        }
        h1{
            color: white;
        }
        label{
            color: white;
        }
</style>

<h1>Create a new workout plan</h1>
<img src="https://thumbs.dreamstime.com/b/dumbbell-weight-vintage-icon-logo-isolated-black-white-retro-style-design-clipart-image-192413623.jpg" width=100, height=100>
<br>
<form action="/UserMenu">
    <button>return to menu</button>
</form>
<form action="/CreatePlan" method="POST">

<label>select bodytype:</label>
<select name="bodyType" id="bodyType">
    <option value="none">none</option>
    <option value="muscular">muscular</option>
    <option value="bodybuilder">bodybuilder</option>
</select>

<label>select bodypart to train:</label>
<select name="BodyPart" id="BodyPart">
    <option value="none">none</option>
    <option value="biceps">biceps</option>
    <option value="triceps">triceps</option>
    <option value="thighs">thighs</option>
    <option value="chest">chest</option>
    <option value="back">back</option>
    <option value="glutes">glutes</option>
    <option value="lower-back">lower-back</option>
    <option value="legs">legs</option>
    
  
    
</select>

<label>select gender:</label>
<select name="gender" id="gender">
    <option value="none">none</option>
    <option value="M">M</option>
    <option value="F">F</option>
    <option value="M/F">M/F</option>
</select>

<button type="submit">search</button>
</form>

<table>
    <tr>
        <th>Bodytype</th>
        <th>BodyPart</th>
        <th>exercise</th>
        <th>reps</th>
        <th>sets</th>
        <th>equipment</th>
        <th>picture</th>
    </tr>

    <% workout.forEach((workout)=> { %>
        <tr>
            <td><%= workout.bodyType%> </td>
            <td><%= workout.BodyPart%> </td>
            <td><%= workout.exercise%> </td>
            <td><%= workout.reps%> </td>
            <td><%= workout._sets%> </td>
            <td><%= workout.equipment%> </td>
            <td><img src="<%= workout.pic%>" width=100, height=100></td>
            
            <td><a href="/addExercise/<%= workout.exercise %>" >add to workout plan</a></td>
        </tr>
        <% }) %>

</table>
</body>


